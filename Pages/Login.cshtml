@page
@model LoginModel
@{
    ViewData["Title"] = "Home page";
}




    
    <style>
        .auth-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
        }

        .login-btn {
            background-color: #007bff;
            color: white;
            font-size: 16px;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            margin-top: 10px;
        }

            .login-btn:hover {
                background-color: #0056b3;
            }
    </style>

<body>
    <div class="container">
        <div class="auth-container">
            <h2 class="text-center">Join</h2>
            <form method="post">
                <div class="form-group">
                    <label for="inputLogin">Login</label>
                    <input class="form-control" asp-for="LoginReader.Login" id="inputLogin" aria-describedby="emailHelp" placeholder="Login">
                </div>
                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" asp-for="LoginReader.Password" class="form-control" id="inputPassword" placeholder="Password">
                </div>
                <button type="submit" class="btn login-btn">Join</button>
            </form>
        </div>
    </div>

<</body>
